<Window x:Class="ReaderDiary.windows.SomeMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReaderDiary.windows"
        mc:Ignorable="d"
        Title="Сообщение" Height="200" Width="500" Background="#fffbf2">
    <Grid>
        <Border Background="#fff4de" CornerRadius="7" BorderBrush="#4d2b08" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Name="TextWindow" Style="{StaticResource TextUsual}" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">Действие успешно выполнено! :)</TextBlock>
                <Button Name="TextButton" Click="Good_Click" Style="{StaticResource ButtonUsial}" Width="200" Height="50" Margin="0,20,10,0" Content="Отлично!"></Button>
                </StackPanel>
        </Border>
    </Grid>
</Window>
