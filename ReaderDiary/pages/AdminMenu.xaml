<Page x:Class="ReaderDiary.pages.AdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReaderDiary.pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900" Background="#fffbf2"
      Title="AdminMenu">

    <Grid>
        <Border Width="500" Height="600" Background="#fff4de" CornerRadius="7" BorderBrush="#4d2b08" BorderThickness="2">
            <StackPanel>
                <TextBlock Style="{StaticResource TextUsual}" FontWeight="DemiBold" Margin="0,30,0,0" HorizontalAlignment="Center" FontSize="35">Меню</TextBlock>
                <TextBlock Style="{StaticResource TextUsual}" FontWeight="DemiBold" Margin="0,0,0,0" HorizontalAlignment="Center" FontSize="35">администратора</TextBlock>
                <Button Click ="ToShowUsers_Click" Name="ShowUsers" Style="{StaticResource ButtonUsial}" Margin="0,30,0,0" Width="300" Height="60">Пользователи</Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
